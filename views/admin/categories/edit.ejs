<%- include('../../partials/header.ejs');%>
<%- include('../../partials/navbar.ejs');%>

<div class="container">

    <div class="card">
        <div class="card-body">
            <blockquote class="blockquote blockquote-dark mb-0">
                <h2 class="card-title">Edição de Categorias</h2>
                <form method="POST" action="/categories/update">
                    <div class="form-group">
                        <label class="form-label" for="input-category-name">Nome da categoria:</label>
                        <input value="<%= category.title %> " class="form-control " type="text" name="title"
                            placeholder="Defina o nome da categoria...">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="id" value="<%= category.id %>">
                        <button class="btn btn-success">Atualizar</button>
                        <a href="/admin/categories" class="btn btn-primary">Voltar</a>
                    </div>
                </form>
            </blockquote>
        </div>
    </div>

</div>

</div>


<%- include('../../partials/footer.ejs');%>